doctype html
html
  head
    title Webvisual Login
    meta(name='viewport', content='width=device-width, minimum-scale=1.0, initial-scale=1, user-scalable=yes')
    script(src='components/webcomponentsjs/webcomponents-lite.js')
    link(rel='import', href='components/polymer/polymer.html')
    link(rel='import', href='components/paper-ripple/paper-ripple.html')
    script(src='../components/d3/d3.min.js')
    link(rel="import", href="elements/style/app-theme.html")
  style.
    body {
      height: 100vh !important;
      width: 100vw;
      display: flex;
      flex-direction: column;
      justify-content: center;
      color: #f1f1f1;
      white-space: nowrap;
    }
    div#background {
      position: absolute;
      background: #669DB4;
      height: 100%;
      width: 100%;
      left: 0;
      top: 0;
    }
    h1 {
      color: #f1f1f1;
      font-weight: normal;
      font-size: 2em;
      margin: 0.5em 0em;
      text-align: center;
    }
    form {
      box-sizing: border-box;
      font-size: 1em;
    }
    div#mainContent {
      margin: auto;
      z-index: 0;
      box-sizing: border-box;
      width: auto;
      height: auto;
      padding: 1.5em;
      color: #f1f1f1;
    }
    label {
      color: #555;
      box-sizing: border-box;
      font-weight: bold;
      display: block;
      height: auto;
      padding: 1em 1em 0.75em 1em;
      font-size: 1em;
      line-height: 1;
    }
    input {
      box-sizing: border-box;
      font-weight: normal;
      transition: all 0.28s cubic-bezier(0.4, 0, 0.2, 1);
      display: block;
      width: 100%;
      padding: 0.75em;;
      font-size: 1em;
      line-height: 1;
      color: #555;
      background-color: #fff;
      border: 1px solid #555;
      border-radius: 0.5em;
      outline: 0;
      text-align: start;
      flex: 2;
    }
    input:focus {
      border-color: #666;
    }
    section#username {
      display: flex;
      align-items: center;
    }
    input#username {
      flex: 1;
    }
    section#dnbase {
      font-size: 1em;
      padding-left: 0.5em;
      flex: 1;
      white-space: normal;
      
    }
    button#submit {
      white-space: nowrap;
      font-family: Fira Sans Light;
      font-size: 1em;
      position: relative;
      box-sizing: border-box;
      margin-top: 3em;
      float: right;
      outline: none;
      border-style: solid;
      border-width: thin;
      border-radius: 5px;
      border-color: currentColor;
      padding: 0.75em 1.5em;
      background: linear-gradient(to bottom, rgba(255,255,255,0.01) 5%,rgba(255,255,255,0.05) 40%);
      color: currentColor;
      fill: currentColor;
      text-transform: none;
      cursor: pointer;
      transition: all 0.14s cubic-bezier(0.4, 0, 0.2, 1);
    }
    button#submit section.inner {
      display: inline-flex;
      align-items: center;
      justify-content: center;
      position: relative;
      box-sizing: border-box;
    }
    button#submit svg#logo {
      height: 24px;
      margin: 0em 0.75em 0em 0em;
    }
    button#submit:hover {
     background: linear-gradient(to bottom, rgba(255,255,255,0.02) 5%,rgba(255,255,255,0.10) 40%);
    }
  body
