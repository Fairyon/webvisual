doctype html
html
  head
    title Webvisual Login
    meta(name='viewport', content='width=device-width, minimum-scale=1.0, initial-scale=1, user-scalable=yes')
    script(src='components/webcomponentsjs/webcomponents-lite.js')
    link(rel='import', href='components/polymer/polymer.html')
    link(rel='import', href='components/paper-ripple/paper-ripple.html')
    link(href='elements/style/index.css', type='text/css', rel='stylesheet')
  style.
    body {
      font-family: Thin;
      font-weight: bold;
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      color: #f1f1f1;
      background: radial-gradient(rgba(102, 157, 180,1) 80%,rgba(102, 157, 180,0.8) 100%);
      -webkit-user-select: none; -moz-user-select: none; -ms-user-select: none; user-select: none;
      -webkit-touch-callout: none;
      -webkit-tap-highlight-color:rgba(0,0,0,0);
    }
    h1 {
      font-family: Thin;
      font-size: 2em;
      margin: 0.5em 0em;
      text-align: center;
    }
    form {
      box-sizing: border-box;
      font-size: 1em;
      line-height: 1;
    }
    div.mainContent {
      align-self: center;
      padding: 1.5em;
      min-width: 300px;
      max-width: 400px;
      width: 50vw;
    }
    label {
      color: #555;
      box-sizing: border-box;
      font-family: Light;
      display: block;
      height: auto;
      padding: 1em 1em 0.75em 1em;
      font-size: 1em;
      line-height: 1;
    }
    input {
      box-sizing: border-box;
      font-family: Light;
      font-weight: normal;
      transition: all 0.28s cubic-bezier(0.4, 0, 0.2, 1);
      display: block;
      width: 100%;
      padding: 0.75em 1.25em;;
      font-size: 1em;
      line-height: 1;
      color: #555;
      background-color: #fff;
      border: 1px solid #555;
      border-radius: 0.5em;
      outline: 0;
      text-align: start;
    }
    input:focus {
      border-color: #666;
      box-shadow: inset 0 1px 1px rgba(0,0,0,.075),0 0 8px rgba(100, 100, 100,.6);
    }
    section#username {
      display: flex;
      align-items: center;
    }
    input#username {
      flex: 1;
    }
    section#dnbase {
      font-size: 1em;
      padding-left: 0.5em;
      //- flex: 1;
    }
    button {
      box-sizing: border-box;
      font-family: Thin;
      font-weight: bold;
      display: flex;
      align-items: center;
      float: left;
      padding: 0.75em 1.5em;;
      font-size: 1em;
      line-height: 1;
      color: #f1f1f1;
      border: thin solid currentColor;
      background: linear-gradient(to bottom, rgba(255,255,255,0.01) 5%,rgba(255,255,255,0.05) 40%);
      transition: all 0.28s cubic-bezier(0.4, 0, 0.2, 1);
      border-radius: 5px;
      outline: 0;
      -webkit-user-select: none; -moz-user-select: none; -ms-user-select: none; user-select: none;
      -webkit-touch-callout: none;
      -webkit-tap-highlight-color:rgba(0,0,0,0);
    }
    section.button-container {
      margin-top: 2em;
      float: right;
      position: relative;
      display: inline-block;
    }
    svg#logo {
      height: 20px;
      float: left;
      margin: 0em 0.75em 0em 0em;
      fill: currentColor;
    }
    button:hover {
      background: linear-gradient(to bottom, rgba(255,255,255,0.02) 5%,rgba(255,255,255,0.10) 40%);
    }
    button:focus {
      box-shadow: inset 0 1px 1px rgba(0,0,0,.075),0 0 8px rgba(100, 100, 100,.6);
    }
  body
    .mainContent
      h1 Webvisual Login
      form#formPost(method='post', action='/login/')
        label(for='username') Username
        section#username
          input#username(name='username', type='text')
          section#dnbase @ibn-net.kfa-juelich.de
        label(for='password') Password
        input#password(name='password', type='password')
        section.button-container
