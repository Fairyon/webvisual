extends layout

block style
	style
		.data.header {
			float: left;
		}
		.data.subheader {
			float: right;
		}
		a.actice {
			font-weight:bold;
		}
		.hidden, *[hidden] {
			display:none;
		}

block content
	.row#header
		.large-12.columns
			h1.data.header Visualization
			h4.data.subheader
				a(href='#')#hide-header &#215;
			hr
	.row
		// Navigation area. The user can choose between the different kind of graphs
		// TODO erzeuge das Navigationsmenue aus den vorhanden Graphen und deren Obertypen
		.large-3.columns
			.section-container.accordion(data-section)
				.section.active
					p.title(data-section-title): a(href='#start')#start Start
				.section
					p.title(data-section-title): a(href='#') Graphentyp 1
					.content(data-section-content)
						ul.side-nav
							li: a(href='#TEST').graph-link TEST
							li: a(href='#type1-sub1').graph-link Subtyp 1.1
							li: a(href='#type1-sub2').graph-link Subtyp 1.2
							li: a(href='#type1-sub3').graph-link Subtyp 1.3
				.section
					p.title(data-section-title): a(href='#') Graphentyp 2
					.content(data-section-content)
						ul.side-nav
							li: a(href='#type2-sub1').graph-link Subtyp 2.1
							li: a(href='#type2-sub2').graph-link Subtyp 2.2
							li: a(href='#type2-sub3').graph-link Subtyp 2.3
				.section
					p.title(data-section-title): a(href='#') Graphentyp 3
					.content(data-section-content)
						ul.side-nav
							li: a(href='#type3-sub1').graph-link Subtyp 3.1
							li: a(href='#type3-sub2').graph-link Subtyp 3.2
							li: a(href='#type3-sub3').graph-link Subtyp 3.3


		// Content area
		.large-9.columns
			#start-box
				p Choose the desired graph in the menu to your left.
			// The graphs will be here
			#graph-box(hidden)

block script
	script(src='js/data/data.js')