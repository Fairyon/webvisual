  //- Polymer style
  style.
    @font-face {
      font-family: Roboto-Medium;
      src: url('css/fonts/Roboto-Medium.ttf') format('truetype');
      font-weight: normal;
      font-style: normal;
    }
    
    @font-face {
      font-family: Roboto-Regular;
      src: url('css/fonts/Roboto-Regular.ttf') format('truetype');
      font-weight: normal;
      font-style: normal;
    }
    
    @font-face {
      font-family: Roboto-Thin;
      src: url('css/fonts/Roboto-Thin.ttf') format('truetype');
      font-weight: normal;
      font-style: normal;
    }
    
    html,body {
      background-color: #E5E5E5;
      font-family: 'Roboto-Regular';
      font-size: 1rem;
      font-weight: 200;
      line-height: 1em;
    }
    
    div {
      font-family: 'Roboto-Regular';
      font-size: 1rem;
      font-weight: 200;
    }

    core-scroll-header-panel {
      heigth: 100%;
      position: absolute;
      top: 0;
      right: 0;
      bottom: 0;
      left: 0;
      background-color: #eee;
    }

    core-scroll-header-panel::shadow #headerBg {
      background-color: #005B82;
    }
    core-scroll-header-panel::shadow #condensedHeaderBg {
      background-color: #669db4;
      
    }
    
    core-toolbar {
      color: #f1f1f1;
      fill: #f1f1f1;
      background-color: transparent;
    }
    
    paper-tabs {
      color: #f1f1f1;
      background: linear-gradient(#005B82,#669DB4);
      text-transform: uppercase;
      font-family: 'Roboto-Regular';
      font-size: 0.9em;
    }
    
    paper-tabs::shadow #selectionBar {
      background-color: #f1f1f1;
      height: 3px;
      border-radius: 5px;
    }
    
    paper-tabs /deep/ paper-tab::shadow #ink {
      color: #669db4;
      }
      
    paper-tabs /deep/ paper-icon-button {
      color: #f1f1f1;
    }
    
    paper-tabs /deep/ paper-tab {
      border-radius: 5px;
    }
    
    paper-tabs /deep/ paper-tab:hover {
      background: rgba(255, 255, 255, 0.15);
    }
    

    
    paper-item::shadow .button-content {
      color: #2c2c2c;
      margin: 5px;
    }
    
    paper-item {
      border-radius: 5px;
      width: 100%;
      margin: 0px 0px 4px 0px;
    }
    paper-item:hover {
      background: rgba(255, 255, 255, 0.50);
    }
    
    paper-icon-button::shadow #ripple {
      color: white;
    }
    
    paper-icon-button {
      color: #f1f1f1;
    }
    
    core-image#logo::shadow #img {
      height: 48px;
    }
    
    [drawer] {
      background: rgba(255, 255, 255, 0.75);
      margin: 0px;
      left: 8px;
      top: 8px;
      border-radius: 0px;
      font-family: 'Roboto-Regular';
      font-size: 1em;
    }
    
    [drawer]::shadow #mainContainer {
      margin: 8px;
      padding: 4px;
    }
    
    #maincontent {
      margin: 0.8em;
    }
    
    a > * {
      color: inherit;
      background: inherit;
    }
    
body(unresolved, fullbleed, vertical, layout)

  core-drawer-panel(forceNarrow)
    core-header-panel(drawer, onclick="document.querySelector('core-drawer-panel').togglePanel();")
      core-selector#mainmenu(selected='0',valueattr="name")
        a(href='/index', target='_top') 
          paper-item#mainmenubutton(name='m1',raised) 
            core-icon(icon='apps')
            | Übersicht
        a(href='/table', target='_top') 
          paper-item#mainmenubutton(name='m2',raised)
            core-icon(icon='list')
            | Tabelle

    core-scroll-header-panel#headerPanel(main,fixed)
      core-toolbar#mainheader
        paper-icon-button#navicon(icon='menu', core-drawer-toggle)
        core-image#logo(src='img/Logo_FZ_Juelich_Weiss.svg',style="background-color: #005B82;", preload, fade)
        div(flex)
        paper-icon-button#morebutton(icon='filter-list', onclick="document.querySelector('#submenu').toggle()")
      core-collapse#submenu()
        paper-tabs#tabs(valueattr="name", selected="all", self-end, scrollable)
          paper-tab(name='all',active) Alle
          paper-tab(name='favorites') Favouriten
          paper-tab(name='row', href='/table') Tabellen
          paper-tab(name='warning') Überwachung
          paper-tab(name='graphs') Graphen
      section#maincontent(scroller, center-justified, horizontal, wrap, layout)
        block content

  // jQuery
  script(src='js/jquery/jquery-2.1.3.js')
  
  // Material Design
  script(src='js/materialize.js')
    
  // Eigene Scripte
  script(src='js/data_processor/data_processor.js')      
  
  // Eigene Plugins
  script(src='/socket.io/socket.io.js')
  
  script.
    
    // Console Log, that Script was excecuted    
    console.log('jade excecuted');
    
