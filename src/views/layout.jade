head
	meta(charset='utf-8')
	// Set the viewport width to device width for mobile
	meta(name='viewport', content='width=device-width')
	- var title = (locals.title.charAt(0).toUpperCase() + locals.title.slice(1))
	title #{title}
	// Included CSS Files (Uncompressed)
	//- link(rel='stylesheet', href='css/foundation.css')

	// Included CSS Files (Compressed)
	link(rel='stylesheet', href='css/foundation.min.css')
	link(rel='stylesheet', href='css/app.css')
	link(rel='stylesheet', href='css/normalize.css')
	link(rel='stylesheet', href='css/global.css')
	link(rel='stylesheet', href='css/nprogress.css')
	link(rel='stylesheet', href='css/customSelect.css')
	link(rel='stylesheet', href='css/options.css')

	// Own CSS stuff
	block style

	// Included JS Files
	script(src='js/vendor/custom.modernizr.js')

	// IE Fix for HTML5 Tags
	//if lt IE 9
		script(src='http://html5shiv.googlecode.com/svn/trunk/html5.js')

body
	include includes/navbar
	block content
	include includes/options

	// Include JS Files (Uncompressed)
	script(src='js/jquery-2.0.2.js')
	script(src='js/nprogress.js')
	script.
		NProgress.configure({ trickleRate: 0.02, trickleSpeed: 200 });
	script(src='/socket.io/socket.io.js')
	script(src='js/options.js')	
	

	// Included JS Files (Compressed)
	//- script(src='http://code.jquery.com/jquery-latest.min.js')
	//- script(src='js/jquery-2.0.2.min.js')
	//- script(src='js/foundation.min.js')
	// Initialize JS Plugins
	script(src='js/app.js')

	script.
		document.write('<script src=' +
		('__proto__' in {} ? 'js/vendor/zepto' : 'js/vendor/jquery') +
		'.js><\/script>')
	script(src='js/foundation/foundation.js')
	//- script(src='js/foundation/foundation.alerts.js')
	//- script(src='js/foundation/foundation.clearing.js')
	//- script(src='js/foundation/foundation.cookie.js')
	script(src='js/foundation/foundation.dropdown.js')
	script(src='js/foundation/foundation.forms.js')
