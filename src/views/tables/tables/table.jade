extends ../../layout

block style
	link(rel='stylesheet', href='css/table.css')
	
block style
	style.
		.sub {
			font-weight: normal;
			color: #1E90FF;
		}
		#valueTable{
			border-style: hidden;
		}
		.valRow:hover{
			background: #D8D8D8;
		}
		#valCols{
			border-bottom: 1px solid #2a73a6;
		}
		.valGroup{
			border-right: 1px solid #2a73a6;
		}

		
block content
	.row
		.small-12.columns
			h1#title
		hr
	.row
		.small-12.columns
			#load
				center: h4.subheader Messwerte werden geladen ...
			#data(style='display:none;')
				table#valueTable

block script

	if locals.env == 'development'
		script(src='js/table/table.js')
	else
		script(src='js/table/table.min.js')
